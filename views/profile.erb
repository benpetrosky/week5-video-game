<h1>WERE HERE</h1>

<h2><%= @profile.username() %></h2>


<button>
<a href="/add_videogame/<%=@profile.id()%>">Click here to add a videogame to the database </a>
</button>


<button>
<a href="/videogame_list/<%=@profile.id()%>/user/<%=@user.id()%>">Checkout all the videogames people are talking about.</a>
</button>

<button>
<a href="/all_users/<%=@profile.id()%>">Search for Friends</a>
</button>

<button>
<a href="/friends_list/<%=@profile.id()%>">View your Friends</a>
</button>

<button>
<a href="/profile/<%= @user.id()%>">Back to Your Profile</a>
</button>

<form action="/add_friend" method="post">
  <input type="hidden" name="profile_id" value="<%=@profile.id()%>">
  <input type="hidden" name="user_id" value="<%= @user_id.id()%>">

  <button type="submit">Add Friend</button>
</form>



<ul>
  <% @profile.opinions.each() do |opinion| %>
   <li> <%=Videogame.find(opinion.videogame_id().to_i).game_name()%> <%=opinion.post%></li>
   <%end%>
</ul>
